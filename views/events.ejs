<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Events</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.3/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <% layout('layout') %>
<h2 class="text-2xl font-bold mb-6">Available Events</h2>

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% events.forEach(event => { %>
    <div class="bg-white rounded-lg shadow-md p-5">
      <h3 class="text-xl font-semibold mb-2"><%= event.title %></h3>
      <p class="text-gray-600 mb-1"><%= event.description %></p>
      <p class="text-sm text-gray-500">ğŸ“… <%= event.date.toDateString() %></p>
      <p class="text-sm text-gray-500">ğŸŸï¸ Seats: <%= event.availableSeats %></p>
      <a href="/events/<%= event._id %>" class="mt-3 inline-block bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg">View Details</a>
    </div>
  <% }) %>
</div>

</body>
</html>